<div class="bookCard">
  <div class="bookImage">
    <img src="{{@avatar}}" alt="Avatar">
  </div>
  <div class="bookDescription">
    <h4><b>{{@title}}</b></h4>
    <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#book{{@id}}">
      Description
    </button>

    <div class="modal fade" id="book{{@id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{@title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>{{@desc}}</p>
          </div>

          <div class="modal-footer">
            {{#if isCart}}
              <button class="btn btn-secondary"   {{action 'removeFromCart' @id }} data-dismiss="modal">Remove from
                Cart
              </button>
            {{else}}
              <button class="btn btn-secondary"   {{action 'addToCart' @id @title @avatar @desc}} data-dismiss="modal">
                Add to Cart
              </button>
            {{/if}}
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>