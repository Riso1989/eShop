<div class="container">
  <form class="searchBar" action="/bookName/{{this.value}}">
    {{input value=this.value}}
  </form>
  <div class="books">
    {{#each @model as |book|}}
      <Book
        @id= {{book.id}}
          @title = {{book.volumeInfo.title}}
        @desc = {{book.volumeInfo.description}}
        @avatar = {{book.volumeInfo.imageLinks.thumbnail}}
        @price = {{book.saleInfo.listPrice.amount}}
        @currency = {{book.saleInfo.listPrice.currencyCode}}
      />
    {{/each}}
  </div>
</div>