<div class="wrapper">
  <div class="contact">
    <form {{action this.sendMessage on="submit"}}>
      <h1>Contact Form</h1>
      <label for="fname">First Name</label>
      {{input required=true type="text" value=firstName placeholder="First name.."}}
      <label for="lname">Last Name</label>
      {{input required=true type="text" value=lastName placeholder="Last name.."}}
      <label for="country">Country</label>
      {{input type="text" value=country placeholder="Country.."}}
      <label for="subject">Subject</label>
      {{textarea required=true type="text" value=subject placeholder="content.."}}
      <button type="submit" class="btn btn-primary">Send message</button>
    </form>

  </div>
  <div class="map">
    <Map
      @lat="48.717110"
      @lng="21.259781"
      @zoom="15"
      @height="500px"
      @width="500px"
    />
  </div>
</div>