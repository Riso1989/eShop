<form  {{action this.sendOrder on="submit"}}>
  <label for="fname">First Name</label>
  {{input required=true type="text" value=firstName placeholder="First name.."}}
  <label for="lname">Last Name</label>
  {{input required=true type="text" value=lastName placeholder="Last name.."}}
  <label for="card">Card Number</label>
  {{input required=true type="text" value=cardNumber placeholder="Card number.."}}
  <div style="display: flex; justify-content:space-around">
    <label for="finalPrice"><h4>Final Price</h4></label>
    <label>
      {{#async-await this.serviceTotal as |ammount|}}
        <h3> {{ammount}} EUR</h3>
      {{/async-await}}
    </label>
  </div>
  <br/>
  <input type="submit" value="submit" class="btn btn-primary btn-lg btn-block active" {{on "click" this.sendOrder}} />
  <button type="submit" class="btn btn-primary btn-lg btn-block active">Send order
  </button>
</form>